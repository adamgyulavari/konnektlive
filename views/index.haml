    $(window).scroll(function() {
      if ($(document).scrollTop() > 50) {
        $('header').addClass('shrink');
      } else {
        $('header').removeClass('shrink');
      }
    });
    $('.profs .prof-item').each((i, item) => {
      let image = new Image()
      console.log("bla" + $(item).data('image'))
      image.src = $(item).data('image')
      $(".empty").append(image)
    })
